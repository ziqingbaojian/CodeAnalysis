{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".", // baseUrl用于设置解析非相对模块名称的基本目录，相对模块不会受到baseUrl的影响
    "paths": { // paths用于设置模块名到基于baseUrl的路径映射
      "@src/*": ["src/*"],
      "@plat/*": ["src/plat/open/*", "src/plat/common/*"]
    }
  },
  "include": ["src", "global.d.ts"]
}